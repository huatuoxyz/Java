<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
     <class name="bean.Department" table="department">
     <id
        name="departmentId"
        type="integer"
        column="departmentid"
        length="10"
       >
        <generator class="native" />
    </id>
     <property
        name="name"
        type="string"
        column="name"
        length="256"
    />
     </class>
</hibernate-mapping>