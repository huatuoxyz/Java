<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

	<form-beans>
		<form-bean name="DynaActionBookForm" type="org.apache.struts.action.DynaActionForm">
			<form-property name="isbn" type="java.lang.String" />
		</form-bean>
		<form-bean name="BookUpdateForm" type="book.form.BookUpdateForm" />
	</form-beans>

	<action-mappings>

		<action path="/BookListAction"
			type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="success" path="/jsp/BookList.jsp" />
		</action>

		<action path="/BookViewAction"
			type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="success" path="/jsp/BookView.jsp" />
		</action>

		<action path="/BookFormAction" 
			type="org.springframework.web.struts.DelegatingActionProxy"
			name="DynaActionBookForm" scope="request">
			<forward name="success" path="/jsp/BookForm.jsp" />
		</action>

		<action path="/BookStoreAction" 
			type="org.springframework.web.struts.DelegatingActionProxy"
			name="BookUpdateForm" scope="request" input="/jsp/BookForm.jsp" validate="true">
			<forward name="success" path="/BookViewAction.do" />
		</action>
		
		<action path="/BookDestroyAction" 
			type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="success" path="/BookListAction.do" />
		</action>

	</action-mappings>

	<message-resources parameter="ApplicationResources" />
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames" value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml" />
	</plug-in>
	
	<plug-in className="org.springframework.web.struts.ContextLoaderPlugIn">
		<set-property property="contextConfigLocation"
			value="/WEB-INF/applicationContext.xml, /WEB-INF/applicationContext-dao.xml" />
	</plug-in>
	
</struts-config>
